<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="3dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/AppTheme.Dark"
        app:layout_scrollFlags="scroll|enterAlways"
        />
    <!--<TextView
        android:id="@+id/tv_batch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/batch"
        android:textColor="@color/font_white_color"

        android:textSize="@dimen/text_size_18" />-->
    <RelativeLayout
        android:id="@+id/rl_batch_totalcash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x46"
        android:background="@color/gray_white_color"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x15"
        android:visibility="gone"
        android:paddingRight="@dimen/x15" >

        <TextView
            android:id="@+id/tv_batch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/batch"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size_18" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/tv_cashier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cumulative_cash"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x6"
                android:layout_toRightOf="@+id/tv_cashier"
                android:textColor="@color/money_red"
                android:textSize="@dimen/text_size_18" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.design.widget.AppBarLayout>
