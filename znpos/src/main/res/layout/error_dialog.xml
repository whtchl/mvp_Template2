<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/white_corners"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_error_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            tools:text="Test"
            android:textColor="@color/black_color"
            android:textSize="@dimen/material_typography_button" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/main_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x44"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_error_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/left_exit_cornerbutton_selector"
            android:text="@string/cancel"
            android:textColor="@color/black_color"
            android:textSize="@dimen/material_typography_button"
            android:visibility="gone" />

        <View
            android:id="@+id/v_error_dialog_center_line"
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="@color/main_gray"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_error_dialog_sure"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/sure_scan_cornerbutton_selector"
            android:text="确定"
            android:textColor="@color/black_color"
            android:textSize="@dimen/material_typography_button" />
    </LinearLayout>

</LinearLayout>