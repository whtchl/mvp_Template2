<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="30dp" >

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:paddingBottom="@dimen/x1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:textSize="@dimen/material_typography_title"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_input_corners"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/material_component_lists_padding_above_list"
                android:layout_marginTop="@dimen/material_component_lists_padding_above_list"
                android:orientation="horizontal"
                android:padding="@dimen/material_component_lists_padding_above_list" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/signin_img24" />

                <EditText
                    android:id="@+id/et1_signin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/srczyh"
                    android:maxLength="2"
                    android:numeric="integer"
                    android:padding="5dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/material_typography_button" />

                <ImageView
                    android:id="@+id/iv1_signin"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:onClick="clearOperator"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/lightgray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/material_component_lists_padding_above_list"
                android:layout_marginTop="@dimen/material_component_lists_padding_above_list"
                android:orientation="horizontal"
                android:padding="@dimen/material_component_lists_padding_above_list" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/login_key" />

                <EditText
                    android:id="@+id/et2_signin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="输入密码"
                    android:maxLength="6"
                    android:numeric="integer"
                    android:padding="5dp"
                    android:password="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/material_typography_body1" />

                <ImageView
                    android:id="@+id/iv2_signin"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:onClick="clearPassword"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="@dimen/material_component_lists_padding_above_list"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:clickable="true"
                android:onClick="IVBtnSignin1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv1_btn_signin"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/jh_img18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="@string/jzczy"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:clickable="true"
                android:onClick="IVBtnSignin2"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv2_btn_signin"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/jh_img18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="@string/jzmm"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/blue_cornerbutton_selector"
            android:onClick="BtnSignIn"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="@string/operator_login"
            android:textColor="@color/white"
            android:textSize="@dimen/material_typography_headline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="@dimen/material_component_lists_right_padding"
            android:orientation="horizontal" >

            <!--<TextView
                android:id="@+id/show_menus_items"
                android:layout_width="0dp"
                android:layout_height="@dimen/x30"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="showMenus"
                android:text="@string/menus"
                android:textColor="#F1730C"
                android:textSize="@dimen/x18" />-->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="right"
                android:onClick="resetSystemButton"
                android:text="@string/system_reset"
                android:textColor="@color/material_orange_900"
                android:textSize="@dimen/material_typography_button" />
        </LinearLayout>
    </LinearLayout>

  <!--  <include
        android:id="@+id/show_sign_menus"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/activity_sign_sdk_menus"
        android:visibility="gone" />-->

</RelativeLayout>