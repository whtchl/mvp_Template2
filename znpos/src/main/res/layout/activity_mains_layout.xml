<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white_color"
    android:id="@+id/lifengpay_main_view"
    android:orientation="vertical" >

    <!--<include layout="@layout/include_toolbar"/>-->
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/gray_white_color" />

    <!-- 主内容 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_bx"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_keyboard_key"
                android:clickable="true"
                android:gravity="center"
                android:onClick="Bx"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/bx"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/material_typography_subheading" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cp"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_keyboard_key"
                android:clickable="true"
                android:gravity="center"
                android:onClick="cp"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/cp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/cp"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/material_typography_subheading" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_dealflow"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_keyboard_key"
                android:clickable="true"
                android:gravity="center"
                android:onClick="DealFlow"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ma_img6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/jyls"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/material_typography_subheading" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_keyboard_key"
                android:clickable="true"
                android:gravity="center"
                android:onClick="setting"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/icon_setup" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/setting"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/material_typography_subheading" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/fg_bgcolor" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="10dp"
        android:background="@color/gray_white_color"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp" >

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/data_icon" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv1"
                android:layout_weight="1"
                android:text="数据统计"
                android:textColor="@color/blue_remind"
                android:textSize="@dimen/material_typography_body1" />

            <TextView
                android:id="@+id/iv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv1"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/xhkdgd"
                android:textColor="@color/money_red"
                android:textSize="@dimen/material_typography_body1" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/fg_bgcolor" />

        <ListView
            android:id="@+id/summaryListview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/gray_color"
            android:dividerHeight="@dimen/x1"
            android:footerDividersEnabled="true"
            android:listSelector="#00000000" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/fg_bgcolor" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="8dp"
        android:background="@color/fg_bgcolor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/blue_button_selector"
        android:clickable="true"
        android:gravity="center"
        android:onClick="IvBtnCashier"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/m_img5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sjsy"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>